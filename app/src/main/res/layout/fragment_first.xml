<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.lab02.proyectobase.viewmodel.MenuViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.FirstFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- TODO: Update blank fragment layout -->

                <TextView
                    android:id="@+id/title_veterinaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/veterinaria"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="150dp"
                    android:id="@+id/map"
                    tools:context=".ui.FirstFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />

                <TextView
                    android:id="@+id/list_veterinaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/lista_veter"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <SearchView
                    android:id="@+id/buscarVeterinarias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_veterinaria" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lista_veterinarias"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/buscarVeterinarias"
                    android:gravity="center"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
                    <!---->
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>


        </FrameLayout>

    </ScrollView>

</layout>