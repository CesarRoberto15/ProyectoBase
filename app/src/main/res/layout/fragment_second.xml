<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.lab02.proyectobase.viewmodel.MenuViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.SecondFragment">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title_albergue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/albergue"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="150dp"
                    android:id="@+id/mapAlbergue"
                    tools:context=".ui.SecondFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />

                <TextView
                    android:id="@+id/list_abergue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/green_normal"
                    android:textSize="12sp"
                    android:text="@string/lista_albergue"
                    android:textAlignment="center"
                    android:gravity="center" />
                <SearchView
                    android:id="@+id/buscarAlbergues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_abergue" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lista_albergues"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:gravity="center"   android:layout_below="@+id/buscarAlbergues">
                    <!---->
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
            <!-- TODO: Update blank fragment layout -->

        </FrameLayout>
    </ScrollView>

</layout>